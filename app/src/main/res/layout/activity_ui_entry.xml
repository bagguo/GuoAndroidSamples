<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UIEntryActivity">

    <Button
        android:id="@+id/btn_constraint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="constraint_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_circle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="circle_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_constraint_layout"
        />

    <Button
        android:id="@+id/btn_custom_view_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="custom_view_simple"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_circle_view"
        />

    <Button
        android:id="@+id/btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_custom_view_simple"
        />
</androidx.constraintlayout.widget.ConstraintLayout>