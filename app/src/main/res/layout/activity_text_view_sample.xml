<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.textview.TextViewSampleActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a sample text for selection." />

    <Button
        android:id="@+id/btnTextSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text select"/>

    <Button
        android:id="@+id/btnTextSelect2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text select 2"/>
</LinearLayout>