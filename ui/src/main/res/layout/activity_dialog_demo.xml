<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".dialog.DialogDemoActivity">

    <Button
        android:id="@+id/btn_custom_alert_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show custom alert dialog" />

    <Button
        android:id="@+id/btn_show_custom_progress_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show custom progress dialog" />

    <Button
        android:id="@+id/btn_stop_custom_progress_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop custom progress dialog" />
</androidx.appcompat.widget.LinearLayoutCompat>